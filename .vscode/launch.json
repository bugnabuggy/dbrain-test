  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run tests",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
      "args": ["--verbose", "-i"],
      // "args": ["--verbose", "-i", "--no-cache"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run project tests",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceRoot}\\scripts\\test.js",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }

  ]
}
